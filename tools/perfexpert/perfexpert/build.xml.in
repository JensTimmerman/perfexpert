<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project basedir="." default="jar" name="ArgP">
    <property environment="env"/>
    <property name="version" value="1.0"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.5"/>
    <property name="source" value="1.5"/>
    
    <path id="ArgP.classpath">
        <pathelement location="."/>
    </path>
    
    <path id="PerfExpert.classpath">
        <pathelement location="bin"/>
        <pathelement location="@top_srcdir@/external/log4j-1.2.16.jar"/>
        <pathelement location="../argp/argp-1.0.jar"/>
    </path>

    <target name="clean">
        <delete file="perfexpert.jar"/>
    </target>
    
    <target name="cleanall" depends="clean"/>
    
    <target name="build">
        <javac includeantruntime="false" debug="true" debuglevel="${debuglevel}" destdir="." source="${source}" target="${target}">
            <src path="@srcdir@"/>
            <classpath refid="PerfExpert.classpath"/>
        </javac>
    </target>

    <target name="jar" depends="clean,build">
        <jar jarfile="perfexpert.jar" basedir="."/>
    </target>
</project>
